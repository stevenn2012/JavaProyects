package co.edu.usa.df;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.HashMap;

public class franfid {

	private String nombreClase;
	private HashMap<String, AtribDat> datosAtributos = new HashMap<String, AtribDat>();
	
	public franfid(String rutaDescriptor) throws IOException{
		BufferedReader leer = new BufferedReader(new FileReader(rutaDescriptor));
		
		String cadena="";
		while((cadena=leer.readLine())!=null){
			String[] datos = cadena.split(" ");
			switch (datos[1]) {
				case "Class":this.nombreClase=datos[2];break;
				case "Attrib":System.out.println(datos[2]);break;
				case "/":System.out.println(datos[2]);break;
				default:System.out.println("Linea Desconocida en desciptor");;break;
			}
		}
		leer.close();
	}
	
}
